<%- model_class = Exercise -%>
<div class="page-header">
  
  <h1>Workouts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:exercise_performed) %></th>
      <th><%= model_class.human_attribute_name(:load_prescribed) %></th>
        <th><%=t '.Record', :default => t("helpers.Record") %></th>
      <th><%= model_class.human_attribute_name(:set_one_actual) %></th>
      <th><%= model_class.human_attribute_name(:set_two_actual) %></th>
      <th><%= model_class.human_attribute_name(:set_three_actual) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.id %></td>
        <td><%= exercise.exercise_performed %></td>
        <td><%= exercise.load_prescribed %></td>
         <td>
          <%= link_to exercise_path(exercise), :class => 'btn btn-danger', :title => "#{ t('.show', :default => t('helpers.links.edit')) }" do %>
        
          <%- end -%>
        <td><%= exercise.set_one_actual %></td>
        <td><%= exercise.set_two_actual %></td>
        <td><%= exercise.set_three_actual %></td>
        <td><%=l exercise.created_at, format: :long %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_exercise_path,
            :class => 'btn btn-primary' %>
